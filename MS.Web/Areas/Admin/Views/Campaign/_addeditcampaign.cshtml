                </div>
            </div>

            <div class="row">
                <div class="form-group">

                    @Html.LabelFor(model => model.EndDate, @Resource_tr_TR.EndDate)
                    @Html.TextBoxFor(model => model.EndDate, true, null, new { @class = "form-control", @id = "date_picker_end", @Value = Model.EndDate != null ? Convert.ToDateTime(Model.EndDate).ToString("dd.MM.yyyy") : @DateTime.Now.ToString("dd.MM.yyyy") })

                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    
                    @Html.Label("Bitiş Saati")
