                    <div class="col-lg-6">
                        @Html.CheckBoxFor(model => model.OptinFlag, new { @class = "minimal" }) @Html.Label("OptinFlag")
                    </div>
                    <div class="col-lg-6">
                       @Html.CheckBoxFor(model => model.Status, new { @class = "minimal" }) @Html.Label(Resource_tr_TR.Active)
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-lg-6">
                    @Html.LabelFor(model => model.ImageLink, "Dikdörtgen Görsel")

                </div>
                <div class="col-lg-6">
                    <a data-toggle="modal" href="@Url.Action("AddPhotos")" data-target="#modal-add-photos" class="btn bg-maroon btn-flat btn-sm">
                        @Resource_tr_TR.UploadImage  <i class="fa fa-upload"></i>
                    </a>
                    <br />
                    <div id="divimages" class="upload_images upload-gallery">
                        @if (Model.CampaignID > 0 && Model.ImageLink != null)
                        {
                            <div class='single' rel='@Model.ImageLink'>
                                <img src="@Url.Content(Model.ImageLink)" />
                            </div>
                            <div class="ajax-file-upload-red deletePhoto" rel="@Model.ImageLink" style="display: inline-block;">Delete</div>
                        }
                    </div>
                    @Html.Hidden("UploadedImages", Model.ImageLink)

                </div>

            </div>
            <br />
            <div class="row">

                <div class="col-lg-6">
                    @Html.LabelFor(model => model.ImageLink2, "Kare Görsel")

                </div>
                <div class="col-lg-6">
                    <a data-toggle="modal" href="@Url.Action("AddPhotos")" data-target="#modal-add2-photos" class="btn bg-maroon btn-flat btn-sm">
                        @Resource_tr_TR.UploadImage  <i class="fa fa-upload"></i>
                    </a>
                    <br />
                    <div id="divimages2" class="upload_images upload-gallery">
