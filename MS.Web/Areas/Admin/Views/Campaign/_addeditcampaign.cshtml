                        {
                            <div class='single' rel='@Model.ImageLink2'>
                                <img src="@Url.Content(Model.ImageLink2)" />
                            </div>
                            <div class="ajax-file-upload-red deletePhoto" rel="@Model.ImageLink2" style="display: inline-block;">Delete</div>
                        }
                    </div>
                    @Html.Hidden("UploadedImages2", Model.ImageLink2)

                </div>

            </div>
        </div>

        <div class="message-error">
            <span style="white-space: pre-line">@Model.UpdateLogs</span>
        </div>


        @Html.Partial("_ModalFooter", new ModalFooter())
