@model CampaignViewModel

@Html.HiddenFor(model => model.CampaignID)

<tr>
    <th>
        @if (Model.ImageLink != null && Model.ImageLink != "")
        {
            
            <a href="@Url.Content(Model.ImageLink).Replace("http://", "https://")" data-lightbox="image"><img src="@Url.Content(Model.ImageLink).Replace("http://", "https://")" width="80" /></a>

            }
</th>
