        @if (Model.ImageLink2 != null && Model.ImageLink2 != "")
        {
            <a href="@Url.Content(Model.ImageLink2).Replace("http://", "https://")" data-lightbox="image">
                <img src="@Url.Content(Model.ImageLink2).Replace("http://", "https://")" width="80" /></a>
