        <th>
        @Html.DisplayFor(model => model.CampaignID)
    </th>
    <th>
        @Html.EditorFor(model => model.OfferName)
    </th>
    <th>
        @Html.EditorFor(model => model.OfferDesc)
        <a class="btn btn-primary btn-sm" href="@Url.Action("addeditcampaign", new { id = Model.CampaignID })" data-target="#modal-create-edit-campaign" data-toggle="modal">Düzenle</a>

    </th>
    <th>@Html.EditorFor(model => model.StartDate,
      new
      {
          htmlAttributes = new
          {
              @Value = Model.StartDate,
              @Class = "time start"
          }
      })</th>
    <th>@Html.EditorFor(model => model.EndDate,
      new
      {
          htmlAttributes = new
          {
              @Value = Model.EndDate,
              @Class = "time end"
          }
      })</th>
    <th>
        @Html.EditorFor(model=>model.DisplayOrder)
    </th>
    <th>
        @Html.EditorFor(model => model.Status)
    </th>
    <th>
        @if (Model.Status==true)
        {
        <a class="btn btn-danger btn-sm" href="@Url.Action("delete", new { id = Model.CampaignID })">@Resource_tr_TR.Delete  <i class="fa fa-trash-o"></i></a>         
        }
        else{
            <a class="btn btn-danger btn-sm" href="@Url.Action("deletePassive", new { id = Model.CampaignID })">@Resource_tr_TR.Delete  <i class="fa fa-trash-o"></i></a> 
        }

