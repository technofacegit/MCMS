@using MS.Web.Models.Others;
@using MS.Web.Code.LIBS;
@using MS.Core.Language;
@model MS.Web.Areas.Admin.Models.KazanclarViewModel

<div id="category-box">
    @using (Html.BeginForm("addeditkazanclar", "Kazanclar", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_ModalHeader", new ModalHeader { ID = "modal-create-edit-kazanclar", Title = (Model.KazanciID <= 0 ? Resource_tr_TR.Create :Resource_tr_TR.Edit ) + " Kazanclar" })
        <div id="validation-summary"></div>
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.KazanciID)
        <div class="modal-body box-body">
            <div class="row">
                <div class="form-group">

                    @Html.LabelFor(model => model.KazancTitle)
                    @Html.TextBoxFor(model => model.KazancTitle, true, null, new { @class = "form-control", @data_msg_required = Resource_tr_TR.required })
                </div>
            </div>
            <div class="row">
                <div class="form-group">

                    @Html.LabelFor(model => model.KazancTag)
                    @Html.TextBoxFor(model => model.KazancTag, true, null, new { @class = "form-control", @data_msg_required = Resource_tr_TR.required })
                </div>
            </div>
            <div class="row">
                <div class="form-group">

                    @Html.LabelFor(model => model.KazancTipi)
                    @Html.TextBoxFor(model => model.KazancTipi, true, null, new { @class = "form-control", @data_msg_required = Resource_tr_TR.required })
                </div>
            </div>
            <div class="row">
                <div class="form-group">

                    @Html.LabelFor(model => model.ItemTitle)
                    @Html.TextBoxFor(model => model.ItemTitle, true, null, new { @class = "form-control", @data_msg_required = Resource_tr_TR.required })
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-6">
                        @Html.CheckBoxFor(model => model.Status, new { @class = "minimal" }) @Html.Label(Resource_tr_TR.Active)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.DisplayOrder, Resource_tr_TR.DisplayOrder)
                    @Html.TextBoxFor(model => model.DisplayOrder, true, null, new { @class = "form-control", @data_rule_number = "true", @data_msg_number = "number only" })
                </div>
            </div>
           
          
            <div class="row">

                <div class="col-lg-6">
                    @Html.LabelFor(model => model.KazancBackground)

                </div>
                <div class="col-lg-6">
                    <a data-toggle="modal" href="@Url.Action("AddPhotos")" data-target="#modal-add-photos" class="btn bg-maroon btn-flat btn-sm">
                        @Resource_tr_TR.UploadImage <i class="fa fa-upload"></i>
                    </a>
                    <br />
                    <div id="divimages" class="upload_images upload-gallery">
                        @if (Model.KazanciID > 0 && Model.KazancBackground != null)
                        {
                            <div class='single' rel='@Model.KazancBackground'><img src="@Url.Content("~/areas/admin/content/images/uploads/KazancBackgroundImage/" + Model.KazancBackground)" /></div>
                            <div class="ajax-file-upload-red deletePhoto" rel="@Model.KazancBackground" style="display: inline-block;">Delete</div>
                        }
                    </div>
                    @Html.Hidden("UploadedImages", Model.KazancBackground)

                </div>

            </div>
        </div>
        @Html.Partial("_ModalFooter", new ModalFooter())
    }
</div>
