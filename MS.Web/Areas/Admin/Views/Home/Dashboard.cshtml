                    </div>
                    <div class="icon">
                        <i class="fa fa-sitemap"></i>
                    </div>
                    <a href="@Url.Action("index", "SallaKazan")" class="small-box-footer">
                        @Resource_tr_TR.ViewAll <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3>
                            @MS.Business.tblImage.Getimages().Count
                        </h3>
                        <p>
                            @(MS.Business.tblImage.Getimages().Count == 1 ? Resource_tr_TR.Image : Resource_tr_TR.Images)
                        </p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-picture-o"></i>
                    </div>
                    <a href="@Url.Content("~/admin/Imagefile")" class="small-box-footer">
                        @Resource_tr_TR.ViewAll <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>



